@page
@model BataAppHR.Areas.Identity.RegisterCustomerModel
@{
    ViewData["Title"] = "Daftar Akun Customer";
}

<div class="auth-container-wide">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="text-center">
            <h1>Daftar Akun Baru</h1>
            <p class="text-muted">Lengkapi data di bawah ini untuk membuat akun customer.</p>
        </div>
        
        <hr class="my-4">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="row">
            <!-- Left Column: Account & Personal Info -->
            <div class="col-md-6">
                <h5 class="mb-3">Informasi Akun</h5>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="contoh@email.com" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                    <label asp-for="Input.Password"></label>
                </div>
                 <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.CUST_NAME" class="form-control" placeholder="Nama Lengkap" />
                    <label asp-for="Input.CUST_NAME">Nama</label>
                    <span asp-validation-for="Input.CUST_NAME" class="text-danger"></span>
                </div>
                 <!-- Password Requirements -->
                <ul class="password-reqs">
                    <li>Minimal 6 karakter</li>
                    <li>Minimal satu huruf besar (A-Z)</li>
                    <li>Minimal satu karakter unik (!, @@ , #, etc)</li>
                </ul>
            </div>

            <!-- Right Column: Company & Address Info -->
            <div class="col-md-6">
                <h5 class="mb-3">Informasi Kontak & Alamat</h5>
                <div class="form-floating mb-3">
                    <input asp-for="Input.COMPANY" class="form-control" placeholder="Nama Perusahaan" />
                    <label asp-for="Input.COMPANY">Perusahaan</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PHONE1" class="form-control" onkeypress="return allowOnlyNumber(event);" placeholder="08123456789" />
                    <label asp-for="Input.PHONE1">Telepon</label>
                </div>
                 <div class="form-floating mb-3">
                    <textarea asp-for="Input.Address" class="form-control" style="height: 100px" placeholder="Alamat Lengkap"></textarea>
                    <label asp-for="Input.Address">Alamat</label>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.City" class="form-control" placeholder="Kota" />
                            <label asp-for="Input.City">Kota</label>
                        </div>
                    </div>
                     <div class="col-sm-6">
                        <div class="form-floating mb-3">
                             <input asp-for="Input.Province" class="form-control" placeholder="Provinsi" />
                             <label asp-for="Input.Province">Provinsi</label>
                        </div>
                    </div>
                </div>
                 <div class="form-floating mb-3">
                    <input asp-for="Input.Postal" class="form-control" onkeypress="return allowOnlyNumber(event);" placeholder="Kode Pos" />
                    <label asp-for="Input.Postal">Kode Pos</label>
                </div>
            </div>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary mt-4">Daftar</button>
        
        <div class="auth-links">
            <p>
                <a asp-page="./Login">Sudah punya akun? Login</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Your existing function for allowing numbers only
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }
    </script>
}