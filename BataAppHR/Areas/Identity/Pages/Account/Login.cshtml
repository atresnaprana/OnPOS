@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="auth-container">
    <form id="account" method="post">
        <h1>Log in</h1>
        <p class="text-muted">Silahkan login menggunakan akun yang sudah terdaftar.</p>

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password" class="form-label">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <a id="forgot-password" asp-page="./ForgotPassword" class="small">Lupa Password?</a>
        </div>

        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>

        <div class="auth-links">
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Daftar sebagai Pengguna baru</a>
            </p>
            <p>
                <a asp-page="./RegisterCustomer" asp-route-returnUrl="@Model.ReturnUrl">Daftar Akun Customer</a>
            </p>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}