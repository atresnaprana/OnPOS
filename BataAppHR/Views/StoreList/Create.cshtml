@model OnPOS.Models.dbStoreList
@{
    ViewData["Title"] = "Create New Store";
    var errmsg = "";
    if (Model != null && !string.IsNullOrEmpty(Model.errmsg))
    {
        errmsg = Model.errmsg;
    }
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>@ViewData["Title"]</h1>
    </div>

    <form asp-action="Create" id="formcreate" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- Section 1: Store Information -->
        <h5 class="mb-3">Store Information</h5>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label class="control-label">Store Name</label>
                    <input asp-for="STORE_NAME" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Store Register Date</label>
                    <input type="date" asp-for="STORE_REG_DATE" class="form-control" />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label class="control-label">Address</label>
                    <textarea asp-for="STORE_ADDRESS" class="form-control"></textarea>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">City</label>
                    <input asp-for="STORE_CITY" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Province</label>
                    <input asp-for="STORE_PROVINCE" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Postal</label>
                    <input asp-for="STORE_POSTAL" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 2: Store Manager & Contact -->
        <h5 class="mb-3">Store Manager & Contact</h5>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Store Manager Name</label>
                    <input asp-for="STORE_MANAGER_NAME" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Store Manager KTP</label>
                    <input asp-for="STORE_MANAGER_KTP" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Store Manager Phone</label>
                    <input asp-for="STORE_MANAGER_PHONE" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Store Manager Email</label>
                    <input asp-for="STORE_MANAGER_EMAIL" class="form-control" type="email" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Store Email</label>
                    <input asp-for="STORE_EMAIL" class="form-control" type="email" />
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 3: Bank Information -->
        <h5 class="mb-3">Bank Information</h5>
        <div class="row">
            <div class="col-md-4"><div class="form-group"><label class="control-label">Bank Name</label><input asp-for="STORE_BANK_NAME" class="form-control" /></div></div>
            <div class="col-md-4"><div class="form-group"><label class="control-label">Bank Account No.</label><input asp-for="STORE_BANK_NUMBER" class="form-control" onkeypress="return allowOnlyNumber(event);" /></div></div>
            <div class="col-md-4"><div class="form-group"><label class="control-label">Bank Branch</label><input asp-for="STORE_BANK_BRANCH" class="form-control" /></div></div>
            <div class="col-md-4"><div class="form-group"><label class="control-label">Bank Country</label><input asp-for="STORE_BANK_COUNTRY" class="form-control" /></div></div>
        </div>

        <hr class="my-4" />

        <!-- Section 4: Account Credentials -->
        <h5 class="mb-3">Account Credentials</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- ** LOGIC PRESERVED: Error message display is here ** -->
        @if (!string.IsNullOrEmpty(errmsg))
        {
            <div class="alert alert-danger mt-3" role="alert">@errmsg</div>
        }

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">Kembali ke List</a>
            <!-- ** LOGIC PRESERVED: Your button still calls alertfirst() ** -->
            <input type="button" value="Simpan Data" onclick="alertfirst()" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is 100% preserved ** -->
    <script>
        $(document).ready(function () {
            // NOTE: The flip/panel logic was commented out in your original code,
            // so it has been omitted here for cleanliness.

            var errmsg = '@errmsg';
            if (errmsg != "" && errmsg != null) {
                alert(errmsg);
            }
        });

        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            var pass = $("#Password").val();
            if (pass == "" || pass == null) {
                alert("empty password");
            } else {
                if (confirm("Are you sure you want to save this data?")) {
                    $('#formcreate').submit();
                } else {
                    return false;
                }
            }
        }
    </script>
}