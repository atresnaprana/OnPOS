@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex align-items-center">
        <a id="manage" class="nav-link text-dark me-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <span class="hello-user">Hello @UserManager.GetUserName(User)!</span>
        </a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-logout">Logout <i class="fa-solid fa-right-from-bracket ms-2"></i></button>
        </form>
    </div>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Daftar</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}