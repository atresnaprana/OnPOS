@model OnPOS.Models.dbStoreStockModel
@{
    ViewData["Title"] = "Stock Details";
}

<div class="content-card">
    <div class="card-header-flex">
        <div>
            <h1>@Model.itmname</h1>
            <p class="text-muted mb-0">Item ID: @Model.itemid | Store ID: @Model.storeid</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to Report
        </a>
    </div>

    <hr />

    <!-- Section 1: Quantity Breakdown -->
    <h5 class="mb-3">Quantity Overview</h5>
    <div class="row">
        <div class="col-md-3"><p class="text-muted">Past Stock: <strong>@Model.Past_stock</strong></p></div>
        <div class="col-md-3"><p class="text-muted">Dispatched: <strong>@Model.dispatch_qty</strong></p></div>
        <div class="col-md-3"><p class="text-muted">Sold: <strong>@Model.sales_qty</strong></p></div>
        <div class="col-md-3"><p class="text-muted">Received: <strong>@Model.receive_qty</strong></p></div>
        <div class="col-12 mt-2"><h4 class="text-primary">Current Stock: <strong>@Model.Current_stock</strong></h4></div>
    </div>

    <hr />

    <!-- Section 2: Stock per Size -->
    <h5 class="mb-3">Stock per Size</h5>
    <div class="pos-stock-header">
        <!-- We are reusing the POS style for a consistent look -->
        <table class="table table-sm table-bordered text-center mb-0" id="sizetbl">
            <thead><tr><th>33</th><th>34</th><th>35</th><th>36</th><th>37</th><th>38</th><th>39</th><th>40</th><th>41</th><th>42</th><th>43</th><th>44</th><th>45</th><th>46</th></tr></thead>
            <tbody>
                <tr>
                    <td>@Model.s33</td>
                    <td>@Model.s34</td>
                    <td>@Model.s35</td>
                    <td>@Model.s36</td>
                    <td>@Model.s37</td>
                    <td>@Model.s38</td>
                    <td>@Model.s39</td>
                    <td>@Model.s40</td>
                    <td>@Model.s41</td>
                    <td>@Model.s42</td>
                    <td>@Model.s43</td>
                    <td>@Model.s44</td>
                    <td>@Model.s45</td>
                    <td>@Model.s46</td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr />

    <!-- Section 3: Other Details -->
    <h5 class="mb-3">Additional Details</h5>
    <div class="row">
        <div class="col-md-4"><p class="text-muted">Category: <strong>@Model.cat</strong></p></div>
        <div class="col-md-4"><p class="text-muted">Subcategory: <strong>@Model.subcat</strong></p></div>
        <div class="col-md-4"><p class="text-muted">Area: <strong>@Model.area</strong></p></div>
        <div class="col-md-4"><p class="text-muted">Last Received: <strong>@Model.lastrcvdate?.ToString("dd MMM yyyy HH:mm")</strong></p></div>
        <div class="col-md-4"><p class="text-muted">Last Sold: <strong>@Model.lastoutdate?.ToString("dd MMM yyyy HH:mm")</strong></p></div>
    </div>
</div>