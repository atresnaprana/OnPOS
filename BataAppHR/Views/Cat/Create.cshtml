@model OnPOS.Models.dbCategory
@{
    ViewData["Title"] = "Create New Category";
    var errmsg = "";
    if (Model != null && !string.IsNullOrEmpty(Model.syserr))
    {
        errmsg = Model.syserr;
    }
}

<div class="auth-container">
    <form asp-action="Create" id="formcreate" method="post">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="text-muted">Complete the details below to add a new item category.</p>
        </div>

        <hr class="my-4" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- ** LOGIC PRESERVED: Error message display is now a modern alert ** -->
        @if (!string.IsNullOrEmpty(errmsg))
        {
            <div class="alert alert-danger" role="alert">@errmsg</div>
        }

        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" placeholder="e.g., FASHION" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="description">Description</label>
            <input asp-for="description" class="form-control" placeholder="A brief description of the category" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="d-flex flex-column gap-2 mt-4">
            <!-- ** LOGIC PRESERVED: This button calls your alertfirst() function ** -->
            <input type="button" value="Save" onclick="alertfirst()" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary text-center">Kembali ke List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is preserved ** -->
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save this data?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}