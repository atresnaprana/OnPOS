@model OnPOS.Models.dbCategory
@{
    ViewData["Title"] = "Edit Category";
}

<div class="auth-container">
    <form asp-action="Edit" id="formcreate" method="post">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="text-muted">Update the description for this category.</p>
        </div>

        <hr class="my-4" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- ** CRITICAL FIX: Hidden input for the ID is required for the Edit action ** -->
        <input type="hidden" asp-for="id" />

        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" readonly />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="description">Description</label>
            <input asp-for="description" class="form-control" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="d-flex flex-column gap-2 mt-4">
            <!-- ** LOGIC PRESERVED: This button calls your alertfirst() function ** -->
            <input type="button" value="Save Changes" onclick="alertfirst()" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary text-center">Kembali ke List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is preserved ** -->
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save these changes?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}