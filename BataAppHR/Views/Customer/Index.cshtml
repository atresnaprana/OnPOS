@model IEnumerable<BataAppHR.Models.dbCustomer>
@{
    ViewData["Title"] = "Form Data Customer";
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Input Data Baru
        </a>
    </div>

    <table class="table table-hover" id="IndexTbl">
        <thead>
            <tr>
                <th>#</th>
                <th>Tanggal Daftar</th>
                <th>Customer EDP</th>
                <th>Nama Customer</th>
                <th>Perusahaan</th>
                <th class="text-center">Legal Approval</th>
                <th class="text-center">Finance Approval</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                // ** LOGIC PRESERVED: Your row counter is untouched **
                var i = 1;
            }
            @foreach (var dt in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>
                        @if (dt.REG_DATE != null)
                        {
                            // ** LOGIC PRESERVED: Your date formatting is untouched **
                            @dt.REG_DATE.Date.ToString("dd/MM/yyyy")
                            ;
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => dt.EDP)</td>
                    <td>@Html.DisplayFor(modelItem => dt.CUST_NAME)</td>
                    <td>@Html.DisplayFor(modelItem => dt.COMPANY)</td>
                    <td class="text-center">
                        @if (dt.isApproved == "1")
                        {
                            // UI IMPROVEMENT: Using a clear status badge instead of a checkbox
                            <span class="status-badge status-approved">Approved</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">Pending</span>
                        }
                    </td>
                    <td class="text-center">
                        @if (dt.isApproved2 == "1")
                        {
                            <span class="status-badge status-approved">Approved</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">Pending</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-action dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@dt.id">Edit</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    // ** LOGIC PRESERVED: Your role check is untouched **
                                    <a class="dropdown-item" asp-action="Delete" asp-route-id="@dt.id">Delete</a>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original DataTables script is preserved ** -->
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable();
        });
    </script>
}