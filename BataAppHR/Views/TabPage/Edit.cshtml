@model BataAppHR.Models.SystemTabModel

@{
    ViewData["Title"] = "Ubah Data";
}
<style>
    input.largerCheckbox {
        width: 20px;
        height: 20px;
    }
</style>
<h1>Ubah Data</h1>
<h3 class="display-5">Form Update</h3>
<hr />
<form asp-action="Edit" id="formcreate" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label class="control-label">Tab Description:</label>
                    <input asp-for="TAB_DESC" class="form-control" />
                    <span asp-validation-for="TAB_DESC" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Tab Display Text:</label>
                    <input asp-for="TAB_TXT" class="form-control" />
                    <span asp-validation-for="TAB_TXT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="button" value="Ubah Data" onclick="alertfirst()" class="btn btn-red" />
                </div>
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-action="Index" class="btn btn-dark">Kembali ke List</a>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>

    function allowOnlyNumber(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
        }
    function alertfirst() {

        if (confirm("Are you sure saving data?")) {
            $('#formcreate').submit();
        } else {
            return false;
        }

    }
    </script>
}


