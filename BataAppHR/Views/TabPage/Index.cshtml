@model IEnumerable<BataAppHR.Models.SystemTabModel>
@{
    ViewData["Title"] = "System Tab List";
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Input Data Baru
        </a>
    </div>

    <table class="table table-hover" id="IndexTbl">
        <thead>
            <tr>
                <th>#</th>
                <th>Tab Description</th>
                <th>Role</th>
                <th>Tab Text</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                // ** LOGIC PRESERVED: Your row counter is untouched **
                var i = 1;
            }
            @foreach (var dt in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@Html.DisplayFor(modelItem => dt.TAB_DESC)</td>
                    <td>@Html.DisplayFor(modelItem => dt.ROLE_ID)</td>
                    <td>@Html.DisplayFor(modelItem => dt.TAB_TXT)</td>
                    <td class="text-center">
                        <!-- UI IMPROVEMENT: Actions are now in a clean dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-sm btn-action dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                            </button>
                            <!-- ** LOGIC PRESERVED: Your original action links are here ** -->
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@dt.ID">Edit</a>
                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@dt.ID">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original DataTables script is preserved ** -->
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable({
                stateSave: true,
            });
        });
    </script>
}