@model BataAppHR.Models.SystemTabModel

@{
    ViewData["Title"] = "Input Data Baru";
}

<div class="auth-container">
    <form asp-action="Create" id="formcreate" method="post">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="text-muted">Lengkapi detail di bawah untuk menambah tab navigasi baru.</p>
        </div>

        <hr class="my-4" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="form-group">
            <label asp-for="TAB_DESC">Tab Description</label>
            <input asp-for="TAB_DESC" class="form-control" placeholder="A brief description of the tab..." />
            <span asp-validation-for="TAB_DESC" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TAB_TXT">Tab Display Text</label>
            <input asp-for="TAB_TXT" class="form-control" placeholder="e.g., Management Toko" />
            <span asp-validation-for="TAB_TXT" class="text-danger"></span>
        </div>

        <div class="d-flex flex-column gap-2 mt-4">
            <!-- ** LOGIC PRESERVED: This button calls your alertfirst() function ** -->
            <input type="button" value="Simpan Data Baru" onclick="alertfirst()" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary text-center">Kembali ke List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is preserved ** -->
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save this data?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}