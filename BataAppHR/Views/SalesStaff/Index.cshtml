@model IEnumerable<OnPOS.Models.dbSalesStaff>
@{
    ViewData["Title"] = "Form Data Sales Staff";
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Input Data Baru
        </a>
    </div>

    <table class="table table-hover" id="IndexTbl">
        <thead>
            <tr>
                <th>#</th>
                <th>Nama Sales Staff</th>
                <th>Store ID</th>
                <th>Phone</th>
                <th>Email</th>
                <th class="text-center">Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                // ** LOGIC PRESERVED: Your row counter is untouched **
                var i = 1;
            }
            @foreach (var dt in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@Html.DisplayFor(modelItem => dt.SALES_NAME)</td>
                    <td>@Html.DisplayFor(modelItem => dt.STORE_ID)</td>
                    <td>@Html.DisplayFor(modelItem => dt.SALES_PHONE)</td>
                    <td>@Html.DisplayFor(modelItem => dt.SALES_EMAIL)</td>
                    <td class="text-center">
                        @if (dt.SALES_BLACKLIST_FLAG == "Y")
                        {
                            // UI IMPROVEMENT: Using a clear danger status badge for blacklisted staff
                            <span class="status-badge btn-danger">Blacklisted</span>
                        }
                        else
                        {
                            <span class="status-badge status-approved">Active</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-action dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@dt.id">Edit Details</a>
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    // ** LOGIC PRESERVED: Your conditional logic is untouched **
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item dropdown-item-danger" asp-action="Delete" asp-route-id="@dt.id">Delete</a>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original DataTables script is preserved ** -->
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable();
        });
    </script>
}