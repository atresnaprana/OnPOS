@model OnPOS.Models.dbSalesStaff
@{
    ViewData["Title"] = "Create New Sales Staff";
    var errmsg = "";
    if (Model != null && !string.IsNullOrEmpty(Model.errmsg))
    {
        errmsg = Model.errmsg;
    }
}

<div class="auth-container-wide">
    <form asp-action="Create" id="formcreate" enctype="multipart/form-data" method="post">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="text-muted">Complete the details below to add a new sales staff member.</p>
        </div>

        <hr class="my-4" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- Section 1: Personal Information -->
        <h5 class="mb-3">Personal & Contact Information</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input asp-for="SALES_NAME" class="form-control" />
                    <span asp-validation-for="SALES_NAME" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Register Date</label>
                    <input type="date" asp-for="SALES_REG_DATE" class="form-control" />
                    <span asp-validation-for="SALES_REG_DATE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">KTP</label>
                    <input asp-for="SALES_KTP" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                    <span asp-validation-for="SALES_KTP" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Phone</label>
                    <input asp-for="SALES_PHONE" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                    <span asp-validation-for="SALES_PHONE" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Login Email</label>
                    <input asp-for="SALES_EMAIL" class="form-control" type="email" />
                    <span asp-validation-for="SALES_EMAIL" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 2: Account Credentials -->
        <h5 class="mb-3">Account Credentials</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- ** LOGIC PRESERVED: Error message display is here ** -->
        @if (!string.IsNullOrEmpty(errmsg))
        {
            <div class="alert alert-danger mt-3" role="alert">@errmsg</div>
        }

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">Kembali ke List</a>
            <!-- ** LOGIC PRESERVED: Your button still calls alertfirst() ** -->
            <input type="button" value="Simpan Data" onclick="alertfirst()" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is 100% preserved ** -->
    <script>
        $(document).ready(function () {
            var errmsg = '@errmsg';
            if (errmsg != "" && errmsg != null) {
                alert(errmsg);
            }
        });

        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            var pass = $("#Password").val();
            if (pass == "" || pass == null) {
                alert("empty password");
            } else {
                if (confirm("Are you sure you want to save this data?")) {
                    $('#formcreate').submit();
                } else {
                    return false;
                }
            }
        }
    </script>
}