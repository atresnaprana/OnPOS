@model BataAppHR.Models.SystemMenuModel

@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="auth-container">
    <div class="danger-card-header">
        <div class="danger-icon"><i class="fa-solid fa-triangle-exclamation"></i></div>
        <h1>Confirm Deletion</h1>
        <p class="text-muted">Are you sure you want to permanently delete this menu item? This action cannot be undone.</p>
    </div>

    <div class="item-details">
        <p><strong>Menu Text:</strong> <span class="item-value">@Html.DisplayFor(model => model.MENU_TXT)</span></p>
        <p><strong>Description:</strong> <span class="item-value">@Html.DisplayFor(model => model.MENU_DESC)</span></p>
        <p><strong>Link:</strong> <span class="item-value">@Html.DisplayFor(model => model.MENU_LINK)</span></p>
    </div>

    <form asp-action="Delete" method="post">
        <!-- ** LOGIC PRESERVED: Hidden input for the ID is still here ** -->
        <input type="hidden" asp-for="ID" />

        <div class="d-grid gap-2">
            <input type="submit" value="Yes, Delete this Menu Item" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
        </div>
    </form>
</div>