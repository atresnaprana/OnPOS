@model BataAppHR.Models.SystemMenuModel

@{
    ViewData["Title"] = "Ubah Data Menu";
}

<div class="auth-container">
    <form asp-action="Edit" id="formcreate" method="post">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="text-muted">Lakukan perubahan pada detail menu di bawah ini.</p>
        </div>

        <hr class="my-4" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- Hidden input for the ID is crucial for the Edit action to work -->
        <input type="hidden" asp-for="ID" />

        <!-- ** LOGIC PRESERVED: Your DropDownListFor helper is untouched ** -->
        <div class="form-group">
            <label class="control-label">Parent Tab</label>
            @Html.DropDownListFor(m => m.TAB_ID, new SelectList(Model.ddTab, "ID", "TAB_DESC"), "-- Select a Parent Tab --", new { @class = "form-control" })
            <span asp-validation-for="TAB_ID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Menu Description</label>
            <input asp-for="MENU_DESC" class="form-control" />
            <span asp-validation-for="MENU_DESC" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Menu Display Text</label>
            <input asp-for="MENU_TXT" class="form-control" />
            <span asp-validation-for="MENU_TXT" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Link (URL)</label>
            <input asp-for="MENU_LINK" class="form-control" />
            <span asp-validation-for="MENU_LINK" class="text-danger"></span>
        </div>

        <div class="d-flex flex-column gap-2 mt-4">
            <!-- ** LOGIC PRESERVED: This button still calls your alertfirst() function ** -->
            <input type="button" value="Ubah Data" onclick="alertfirst()" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary text-center">Kembali ke List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is preserved ** -->
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save these changes?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}