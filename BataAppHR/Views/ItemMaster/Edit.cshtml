@model OnPOS.Models.dbItemMaster
@{
    ViewData["Title"] = "Edit Item";
    var subcat = Model.subcategory;
    var errmsg = "";
    if (!string.IsNullOrEmpty(Model.syserr))
    {
        errmsg = Model.syserr;
    }
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>@ViewData["Title"]: @Model.itemid</h1>
    </div>

    <form asp-action="Edit" id="formcreate" method="post">
        <!-- ** CRITICAL FIX: Hidden input for the ID is required for the Edit action ** -->
        <input type="hidden" asp-for="id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- Section 1: Core Item Details -->
        <h5 class="mb-3">Core Item Details</h5>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="itemid" class="control-label"></label>
                    <input asp-for="itemid" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="color" class="control-label"></label>
                    <input asp-for="color" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="size" class="control-label"></label>
                    <input asp-for="size" class="form-control" />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="itemdescription" class="control-label"></label>
                    <textarea asp-for="itemdescription" class="form-control"></textarea>
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 2: Classification -->
        <h5 class="mb-3">Classification</h5>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="category" class="control-label"></label>
                    @Html.DropDownListFor(m => m.category, new SelectList(Model.ddcat, "Category", "description"), new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="subcategory" class="control-label"></label>
                    @Html.DropDownListFor(m => m.subcategory, new SelectList(Model.ddsubcat, "SubCategory", "description"), new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Department</label>
                    @Html.DropDownListFor(m => m.codedivisi, new SelectList(Model.ddDepartment, "id", "name"), new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Gender</label>
                    @Html.DropDownListFor(m => m.gender, new SelectList(Model.ddgender, "id", "name"), new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="brand" class="control-label"></label>
                    <input asp-for="brand" class="form-control" />
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 3: Pricing -->
        <h5 class="mb-3">Pricing</h5>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="price1" class="control-label"></label>
                    <input asp-for="price1" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="price2" class="control-label"></label>
                    <input asp-for="price2" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="price3" class="control-label"></label>
                    <input asp-for="price3" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                </div>
            </div>
        </div>

        <!-- ** LOGIC PRESERVED: Error message display is here ** -->
        @if (!string.IsNullOrEmpty(errmsg))
        {
            <div class="alert alert-danger mt-3" role="alert">@errmsg</div>
        }

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">Kembali ke List</a>
            <!-- ** LOGIC PRESERVED: Your button still calls alertfirst() ** -->
            <input type="button" value="Save" onclick="alertfirst()" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is 100% preserved ** -->
    <script>
        var subcat = '@subcat'
        $(document).ready(function () {
            $("#codedivisi").select2({ placeholder: "Select Department" });
            $("#gender").select2({ placeholder: "Select Gender" });
            $("#category").select2({ placeholder: "Select Category" });
            $("#subcategory").select2({ placeholder: "Select Sub Category" });

            // ** LOGIC PRESERVED: Your subcategory initialization logic **
            if (subcat != "" && subcat != null) { // Corrected the null check
                $("#subcategory").val(subcat).trigger('change');
                $("#subcategory").prop('disabled', false);
            } else {
                $("#subcategory").val(null).trigger('change');
                $("#subcategory").prop('disabled', true);
            }
        });

        $('#category').on('change', function () {
            var value = $("#category").val();
            if (value != null && value != "") {
                $("#subcategory").empty().trigger('change'); // Clear previous options
                $.ajax({
                    url: '@Url.Action("getsubcatlist", "ItemMaster")',
                    type: "GET",
                    data: { cat: value },
                    dataType: 'json',
                    success: function (data) {
                        var catnew = ""; // To check if the loaded data matches the selected category
                        if (data && data.length > 0) {
                            $("#subcategory").prop('disabled', false);
                            $('#subcategory').append(new Option("-- Select Subcategory --", "", false, false));

                            data.forEach(function (item) {
                                var newOption = new Option(item.description, item.subCategory, false, false);
                                $('#subcategory').append(newOption);
                                catnew = item.category;
                            });
                        } else {
                            $("#subcategory").prop('disabled', true);
                        }

                        // ** LOGIC PRESERVED: Re-selecting the subcategory if it belongs to the new category **
                        if (catnew == value) {
                            if (subcat != "" && subcat != null) {
                                $("#subcategory").val(subcat).trigger('change');
                            }
                        } else {
                             $("#subcategory").val(null).trigger('change');
                        }
                    },
                    error: function () {
                         $("#subcategory").prop('disabled', true);
                         $("#subcategory").empty().trigger('change');
                    }
                });
            } else {
                $("#subcategory").prop('disabled', true);
                $("#subcategory").empty().trigger('change');
            }
        });

        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save this data?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}