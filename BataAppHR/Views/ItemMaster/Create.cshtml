@model OnPOS.Models.dbItemMaster
@{
    ViewData["Title"] = "Create New Item";
    var errmsg = "";
    if (!string.IsNullOrEmpty(Model.syserr))
    {
        errmsg = Model.syserr;
    }
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>@ViewData["Title"]</h1>
    </div>

    <form asp-action="Create" id="formcreate" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- Section 1: Core Item Details -->
        <h5 class="mb-3">Core Item Details</h5>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Item ID (must be unique)</label>
                    <input asp-for="itemid" class="form-control" />
                    <span asp-validation-for="itemid" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="color" class="control-label"></label>
                    <input asp-for="color" class="form-control" />
                    <span asp-validation-for="color" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="size" class="control-label"></label>
                    <input asp-for="size" class="form-control" />
                    <span asp-validation-for="size" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="itemdescription" class="control-label"></label>
                    <textarea asp-for="itemdescription" class="form-control"></textarea>
                    <span asp-validation-for="itemdescription" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 2: Classification -->
        <h5 class="mb-3">Classification</h5>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="category" class="control-label"></label>
                    @Html.DropDownListFor(m => m.category, new SelectList(Model.ddcat, "Category", "description"), "-- Select Category --", new { @class = "form-control" })
                    <span asp-validation-for="category" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="subcategory" class="control-label"></label>
                    @Html.DropDownListFor(m => m.subcategory, new SelectList(Model.ddsubcat, "SubCategory", "description"), "-- Select Subcategory --", new { @class = "form-control" })
                    <span asp-validation-for="subcategory" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Department</label>
                    @Html.DropDownListFor(m => m.codedivisi, new SelectList(Model.ddDepartment, "id", "name"), "-- Select Department --", new { @class = "form-control" })
                    <span asp-validation-for="codedivisi" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Gender</label>
                    @Html.DropDownListFor(m => m.gender, new SelectList(Model.ddgender, "id", "name"), "-- Select Gender --", new { @class = "form-control" })
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="brand" class="control-label"></label>
                    <input asp-for="brand" class="form-control" />
                    <span asp-validation-for="brand" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 3: Pricing -->
        <h5 class="mb-3">Pricing</h5>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="price1" class="control-label"></label>
                    <input asp-for="price1" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                    <span asp-validation-for="price1" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="price2" class="control-label"></label>
                    <input asp-for="price2" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                    <span asp-validation-for="price2" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="price3" class="control-label"></label>
                    <input asp-for="price3" class="form-control" onkeypress="return allowOnlyNumber(event);" />
                    <span asp-validation-for="price3" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- ** LOGIC PRESERVED: Error message display is here ** -->
        @if (!string.IsNullOrEmpty(errmsg))
        {
            <div class="alert alert-danger mt-3" role="alert">@errmsg</div>
        }

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">Kembali ke List</a>
            <!-- ** LOGIC PRESERVED: Your button still calls alertfirst() ** -->
            <input type="button" value="Save" onclick="alertfirst()" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is 100% preserved ** -->
    <script>
        $(document).ready(function () {
            $("#codedivisi").select2({ placeholder: "Select Department" });
            $("#gender").select2({ placeholder: "Select Gender" });
            $("#category").select2({ placeholder: "Select Category" });
            $("#subcategory").select2({ placeholder: "Select Sub Category" });

            $("#subcategory").prop('disabled', true);
        });

        $('#category').on('change', function () {
            var value = $("#category").val();
            if (value != null && value != "") {
                $("#subcategory").empty().trigger('change'); // Clear previous options
                $.ajax({
                    url: '@Url.Action("getsubcatlist", "ItemMaster")',
                    type: "GET",
                    data: { cat: value },
                    dataType: 'json',
                    success: function (data) {
                        if (data && data.length > 0) {
                            $("#subcategory").prop('disabled', false);

                            // Add a default placeholder option first
                            $('#subcategory').append(new Option("-- Select Subcategory --", "", false, false));

                            data.forEach(function (item) {
                                var newOption = new Option(item.description, item.subCategory, false, false);
                                $('#subcategory').append(newOption);
                            });
                             $('#subcategory').trigger('change'); // Notify select2 of changes
                        } else {
                            $("#subcategory").prop('disabled', true);
                             $('#subcategory').trigger('change');
                        }
                    },
                    error: function () {
                        $("#subcategory").prop('disabled', true);
                        $('#subcategory').trigger('change');
                    }
                });
            } else {
                 $("#subcategory").empty().trigger('change');
                 $("#subcategory").prop('disabled', true);
            }
        });

        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save this data?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}