@model OnPOS.Models.dbDiscount

@{
    ViewData["Title"] = "Confirm Deactivation";
}

<div class="auth-container">
    <div class="danger-card-header">
        <div class="danger-icon"><i class="fa-solid fa-triangle-exclamation"></i></div>
        <h1>@ViewData["Title"]</h1>
        <p class="text-muted">Are you sure you want to deactivate this promotion? It will be marked as inactive.</p>
    </div>

    <div class="item-details">
        <p><strong>Promo Name:</strong> <span class="item-value">@Html.DisplayFor(model => model.promo_name)</span></p>
        <p><strong>Article:</strong> <span class="item-value">@Html.DisplayFor(model => model.article)</span></p>
    </div>

    <form asp-action="Delete" method="post">
        <!-- ** LOGIC PRESERVED: Hidden input for the ID is still here ** -->
        <input type="hidden" asp-for="id" />

        <div class="d-grid gap-2">
            <input type="submit" value="Yes, Deactivate this Promotion" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
        </div>
    </form>
</div>