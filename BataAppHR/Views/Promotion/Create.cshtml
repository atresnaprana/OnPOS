@model OnPOS.Models.dbDiscount
@{
    ViewData["Title"] = "Create New Promotion";
    string errmsg = Model.errormessage;
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>@ViewData["Title"]</h1>
    </div>

    <form asp-action="Create" id="formcreate" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- Section 1: Promotion Details -->
        <h5 class="mb-3">Promotion Details</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Promo Name</label>
                    <input asp-for="promo_name" class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="article" class="control-label"></label>
                    @Html.DropDownListFor(m => m.article, new SelectList(Model.listitems, "id", "name"), "-- Select an Article --", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 2: Discount Logic -->
        <h5 class="mb-3">Discount Logic</h5>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="type" class="control-label"></label>
                    @Html.DropDownListFor(model => model.type, new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Percentage", Value = "percentage" },
                                        new SelectListItem { Text = "Amount", Value = "amount" }
                                        }, "-- Select a Type --", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-8">
                <!-- ** LOGIC PRESERVED: These fields will be shown/hidden by your script ** -->
                <div class="form-group" id="isperc">
                    <label asp-for="percentage" class="control-label"></label>
                    <input asp-for="percentage" class="form-control" />
                </div>
                <div class="form-group" id="isamt">
                    <label asp-for="amount" class="control-label"></label>
                    <input asp-for="amount" class="form-control" />
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Section 3: Validity & Status -->
        <h5 class="mb-3">Validity, Stores & Status</h5>
        <div class="row align-items-center">
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="validfrom" class="control-label"></label>
                    <input asp-for="validfrom" class="form-control" type="datetime-local" />
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="validto" class="control-label"></label>
                    <input asp-for="validto" class="form-control" type="datetime-local" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label class="control-label d-block">Active Status</label>
                    <label class="switch"><input asp-for="isactive" /><span class="slider"></span></label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label d-block">Apply to all stores?</label>
                    <label class="switch"><input asp-for="isallstorebool" /><span class="slider"></span></label>
                </div>
            </div>
            <!-- ** LOGIC PRESERVED: This field will be shown/hidden by your script ** -->
            <div class="col-md-12 form-group" id="storeselect">
                <label class="control-label">Select Specific Stores</label>
                @Html.DropDownListFor(m => m.storeidlist, new SelectList(Model.liststore, "id", "name"), new { @class = "form-control" })
            </div>
        </div>

        <!-- ** LOGIC PRESERVED: Error message display is here ** -->
        @if (!string.IsNullOrEmpty(errmsg))
        {
            <div class="alert alert-danger mt-3" role="alert">@errmsg</div>
        }

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">Kembali ke List</a>
            <!-- ** LOGIC PRESERVED: Your button still calls alertfirst() ** -->
            <input type="button" value="Save" onclick="alertfirst()" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is 100% preserved ** -->
    <script>
        $(document).ready(function () {
            var msg = '@errmsg';
            if (msg != '') {
                alert("error:" + msg);
            }
            $("#amount").on("change paste keyup", function () {
                if ($(this).val() < 1) {
                    $(this).val(1);
                }
            });
            $("#percentage").on("change paste keyup", function () {
                if ($(this).val() < 1) {
                    $(this).val(1);
                }
            });

            $("#article").select2({ placeholder: "Select article" });
            $("#article").val(null).trigger('change');

            $("#storeidlist").select2({
                placeholder: "Select store id",
                multiple: true
            });
            $("#storeidlist").val(null).trigger('change');

            $("#type").select2({ placeholder: "Select Promo type" });

            $("#type").on("change", function () {
                var typeval = $("#type").val();
                if (typeval == "percentage") {
                    $("#isamt").hide();
                    $("#isperc").show();
                } else {
                    $("#isamt").show();
                    $("#isperc").hide();
                }
            });

            $("#isallstorebool").on("change", function () {
                var chk = $("#isallstorebool").is(':checked');
                if (!chk) {
                    $("#storeselect").show();
                } else {
                    $("#storeselect").hide();
                    $("#storeidlist").val(null).trigger('change');
                }
            });

            // Initial state setup
            $("#isallstorebool").prop('checked', true).trigger('change');
            $("#isamt").hide();
            $("#isperc").hide(); // Hide both initially
            $("#type").val(null).trigger('change');
        });

        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save this data?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}