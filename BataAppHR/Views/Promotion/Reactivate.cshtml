@model OnPOS.Models.dbDiscount

@{
    ViewData["Title"] = "Confirm Reactivation";
}

<div class="auth-container">
    <div class="text-center mb-4">
        <div class="success-icon"><i class="fa-solid fa-power-off"></i></div>
        <h1>@ViewData["Title"]</h1>
        <p class="text-muted">Are you sure you want to reactivate this promotion? It will be marked as active.</p>
    </div>

    <div class="item-details">
        <p><strong>Promo Name:</strong> <span class="item-value">@Html.DisplayFor(model => model.promo_name)</span></p>
        <p><strong>Article:</strong> <span class="item-value">@Html.DisplayFor(model => model.article)</span></p>
    </div>

    <form asp-action="Reactivate" method="post">
        <!-- ** LOGIC PRESERVED: Hidden input for the ID is still here ** -->
        <input type="hidden" asp-for="id" />

        <div class="d-grid gap-2">
            <!-- UI IMPROVEMENT: Using the correct 'btn-success' class -->
            <input type="submit" value="Yes, Reactivate this Promotion" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
        </div>
    </form>
</div>