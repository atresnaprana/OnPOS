@model IEnumerable<BataAppHR.Models.dbSliderImg>
@{
    ViewData["Title"] = "Slide Image List";
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Input Data Baru
        </a>
    </div>

    <table class="table table-hover" id="IndexTbl">
        <thead>
            <tr>
                <th>#</th>
                <th>Image Preview</th>
                <th>Image Description</th>
                <th>File Name</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                // ** LOGIC PRESERVED: Your row counter is untouched **
                var i = 1;
            }
            @foreach (var dt in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>
                        <!-- UI IMPROVEMENT: Showing a preview of the image -->
                        <img src="@Url.Action("GetImage", "SliderUpload", new { id = dt.ID })" alt="@dt.IMG_DESC" class="table-img-preview" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => dt.IMG_DESC)</td>
                    <td>@Html.DisplayFor(modelItem => dt.FILE_NAME)</td>
                    <td class="text-center">
                        <!-- UI IMPROVEMENT: Actions are now in a clean dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-sm btn-action dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                            </button>
                            <!-- ** LOGIC PRESERVED: Your original action links are here ** -->
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@dt.ID">Edit</a>
                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@dt.ID">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original DataTables script is preserved ** -->
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable({
                stateSave: true,
            });
        });
    </script>
}