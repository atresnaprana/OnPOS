@model BataAppHR.Models.dbSliderImg

@{
    ViewData["Title"] = "Input Data Baru";
}

<div class="auth-container">
    <form asp-action="Create" id="formcreate" enctype="multipart/form-data" method="post">
        <div class="text-center">
            <h1>Upload New Slide Image</h1>
            <p class="text-muted">Provide a description and upload the image file.</p>
        </div>

        <hr class="my-4" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="form-group">
            <label asp-for="IMG_DESC">Image Description</label>
            <input asp-for="IMG_DESC" class="form-control" placeholder="e.g., Summer Sale Banner" />
            <span asp-validation-for="IMG_DESC" class="text-danger"></span>
        </div>

        <!-- UI IMPROVEMENT: Using the modern "dropzone" for file uploads -->
        <div class="form-group">
            <label class="control-label">Slide Image</label>
            <div class="file-drop-zone">
                <span class="file-upload-text">
                    <i class="fa-solid fa-cloud-arrow-up"></i>
                    Click or drag to upload
                    <small class="d-block mt-2">Max 4MB (JPG, JPEG, PNG)</small>
                </span>
                <!-- ** LOGIC PRESERVED: Your asp-for and id are untouched ** -->
                <input type="file" asp-for="fileImg" />
            </div>
            <span asp-validation-for="fileImg" class="text-danger"></span>
        </div>

        <div class="d-flex flex-column gap-2 mt-4">
            <!-- ** LOGIC PRESERVED: This button calls your alertfirst() function ** -->
            <input type="button" value="Simpan Data Baru" onclick="alertfirst()" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary text-center">Kembali ke List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original script is 100% preserved ** -->
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save this data?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }

        // ** LOGIC PRESERVED: Your file validation logic is untouched **
        $('#fileImg').on('change', function (e) {
            // Check if a file was actually selected
            if (this.files && this.files.length > 0) {
                const file = this.files[0];
                const size = (file.size / 1024 / 1024).toFixed(2);
                const fileName = file.name;
                const fileExtension = ['jpeg', 'jpg', 'png'];
                let errmsg = "";

                // ** YOUR VALIDATION LOGIC - PRESERVED **
                if (size > 4) {
                    errmsg += "File size maximum is 4 MB.\r\n";
                }
                if ($.inArray(fileName.split('.').pop().toLowerCase(), fileExtension) == -1) {
                    errmsg += "Only formats are allowed: " + fileExtension.join(', ');
                }

                // ** MY UI FEEDBACK LOGIC - INTEGRATED **
                if (errmsg != "") {
                    // If there's an error, clear the input and show the alert
                    $(this).val('');
                    alert(errmsg);
                    // Reset the text to the default
                    $(this).closest('.file-drop-zone').find('.file-upload-text').html('<i class="fa-solid fa-cloud-arrow-up"></i> Click or drag to upload <small class="d-block mt-2">Max 4MB (JPG, JPEG, PNG)</small>');
                } else {
                    // If validation passes, show the selected file name
                    $(this).closest('.file-drop-zone').find('.file-upload-text').html('<i class="fa-solid fa-file-image"></i> Selected: <strong>' + fileName + '</strong>');
                }
            }
        });
    </script>
}