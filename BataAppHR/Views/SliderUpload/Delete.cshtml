@model BataAppHR.Models.dbSliderImg

@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="auth-container">
    <div class="danger-card-header">
        <div class="danger-icon"><i class="fa-solid fa-triangle-exclamation"></i></div>
        <h1>Confirm Deletion</h1>
        <p class="text-muted">Are you sure you want to permanently delete this slide image? This action cannot be undone.</p>
    </div>

    <!-- UI IMPROVEMENT: Showing the image and its details -->
    <div class="item-details">
        <div class="form-image-preview">
            <!-- Using the GetImage action to show the exact image being deleted -->
            <img src="@Url.Action("GetImage", "SliderUpload", new { id = Model.ID })" />
        </div>
        <p><strong>Image Description:</strong> <span class="item-value">@Html.DisplayFor(model => model.IMG_DESC)</span></p>
    </div>

    <form asp-action="Delete" method="post">
        <!-- ** LOGIC PRESERVED: Hidden input for the ID is still here ** -->
        <input type="hidden" asp-for="ID" />

        <div class="d-grid gap-2">
            <input type="submit" value="Yes, Delete this Image" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
        </div>
    </form>
</div>