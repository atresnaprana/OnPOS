@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Management";
}

<div class="content-card">
    <div class="card-header-flex">
        <h1>List of Roles</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Create Role
        </a>
    </div>

    <table class="table table-hover" id="IndexTbl">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td class="text-center">
                        <!-- ** UI IMPROVEMENT: Actions are now in a dropdown ** -->
                        <div class="dropdown">
                            <button class="btn btn-sm btn-action dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                            </button>
                            <!-- ** LOGIC PRESERVED: All original links are here ** -->
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="EditUsersInRole" asp-route-id="@role.Id">Manage Users</a>
                                <a class="dropdown-item" asp-action="EditRolesTab" asp-route-id="@role.Id">Manage Tabs</a>
                                <a class="dropdown-item" asp-action="EditRolesMenu" asp-route-id="@role.Id">Manage Menus</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- ** UNTOUCHED LOGIC: Your original DataTables script is preserved ** -->
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable({
                "sPaginationType": "full_numbers",
                "bJQueryUI": true,
                "bProcessing": true,
                "aLengthMenu": [[10, 50, 100, 200, -1], ["10", "50", "100", "200", "All"]],
                "stateSave": true,
                "oSelectorOpts": { filter: 'applied' },
                dom: "<'row'<'col-sm-12'B>>" +
                    "<'row'<'col-sm-6'l><'col-sm-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-5'i><'col-sm-7'p>>",
                buttons: [
                    {
                        extend: 'excel',
                        text: 'Export to Excel',
                        title: 'XstoreList',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ],
                "columnDefs": [{
                    "className": "dt-center",
                    "targets": [2] // Center only the Actions column
                }],
            });
        });
    </script>
}