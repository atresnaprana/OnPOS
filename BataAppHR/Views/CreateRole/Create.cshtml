@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Create Role";
}

<div class="auth-container">
    <form asp-action="Create" method="post">
        <div class="text-center">
            <h1>Create New Role</h1>
            <p class="text-muted">Please provide a name for the new role.</p>
        </div>

        <hr class="my-4" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <!-- ** THE CORRECT BOOTSTRAP 4 FORM STRUCTURE ** -->
        <!-- This uses .form-group and a standard label, which works perfectly. -->
        <div class="form-group">
            <label asp-for="Name">Role Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter role name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="w-100 btn btn-primary mt-4">Create Role</button>

        <div class="auth-links">
            <a asp-action="Index">
                <i class="fa-solid fa-arrow-left me-1"></i>
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}