@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="auth-container">
    <div class="danger-card-header">
        <div class="danger-icon"><i class="fa-solid fa-triangle-exclamation"></i></div>
        <h1>Confirm Deletion</h1>
        <p class="text-muted">Are you sure you want to permanently delete this role? This action cannot be undone.</p>
    </div>

    <div class="item-details">
        <p><strong>Role Name:</strong> <span class="item-value">@Html.DisplayFor(model => model.Name)</span></p>
        <p><strong>Role ID:</strong> <span class="item-value">@Html.DisplayFor(model => model.Id)</span></p>
    </div>

    <form asp-action="Delete">
        <!-- ** LOGIC PRESERVED: Hidden input for the ID is still here ** -->
        <input type="hidden" asp-for="Id" />

        <div class="d-grid gap-2">
            <input type="submit" value="Yes, Delete this Role" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
        </div>
    </form>
</div>